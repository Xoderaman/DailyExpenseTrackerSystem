@model DailyExpenseTracker.Entity.Response.ExpenseResponse

@{
    ViewData["Title"] = "Delete Expense";
    Layout = null;
    var responseMessage = ViewBag.ResponseMessage as DailyExpenseTracker.Entity.Response.ResponseMessage;
}

<h2>Delete Expense</h2>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container mt-5">
    <!-- Display response message if available -->
    @if (responseMessage != null)
    {
        <div class="alert @((responseMessage.IsSuccess) ? "alert-success" : "alert-danger")" role="alert">
            @responseMessage.Message
        </div>
    }   

    <h4>Are you sure you want to delete this expense?</h4>
    <div>
        <strong>Category:</strong> @Model.Category
    </div>
    <div>
        <strong>Amount:</strong> @Model.Amount
    </div>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ExpenseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Expense")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
