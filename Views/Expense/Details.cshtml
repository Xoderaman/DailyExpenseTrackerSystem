@model DailyExpenseTracker.Entity.Response.ExpenseResponse;

@{
    ViewBag.Title = "Expense Details";
    Layout = "_ExpenseOverviewCard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg card-hover-effect">
                
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th>Expense ID:</th>
                                <td>@Model.ExpenseId</td>
                            </tr>
                            <tr>
                                <th>Category:</th>
                                <td>@Model.Category</td>
                            </tr>
                            <tr>
                                <th>Amount:</th>
                                <td>₹@Model.Amount</td>
                            </tr>
                            <tr>
                                <th>Description:</th>
                                <td>@Model.Description</td>
                            </tr>
                            <tr>
                                <th>Date:</th>
                                <td>@Model.Date.ToString("MMMM dd, yyyy")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "Expense")" class="btn btn-secondary btn-lg btn-hover-effect">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced CSS Styling -->
<style>
    /* Card Styling */
    .card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    .card-hover-effect:hover {
        transform: scale(1.02); /* Slight zoom on hover */
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1); /* Enhanced shadow effect */
    }

    /* Gradient Header Styling */
    .bg-gradient-primary {
        background: linear-gradient(90deg, #007bff, #0056b3); /* Gradient effect */
    }

    .card-header {
        color: #fff;
        padding: 15px;
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
    }

    /* Table Styling */
    .table-borderless th, .table-borderless td {
        padding: 10px;
        font-size: 1.2rem;
        border-top: none;
    }

    .table-borderless th {
        width: 30%;
        text-align: left;
        color: #007bff;
        font-weight: bold;
    }

    .table-borderless td {
        color: #333;
    }

    /* Button Styling */
    .btn-secondary {
        border-radius: 50px; /* Rounded button */
        padding: 12px 30px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth transition effects */
    }

    .btn-hover-effect:hover {
        background-color: #6c757d; /* Darker gray on hover */
        transform: scale(1.05); /* Slight zoom effect on hover */
    }

    /* Optional Font Awesome Icons */
    .fas {
        margin-right: 5px;
    }
</style>
