@model DailyExpenseTracker.Entity.Response.ExpenseResponse

@{
    ViewData["Title"] = "Edit Expense";
    Layout = "_ExpenseOverviewCard";
}

<h2 class="text-center mt-4">Edit Expense</h2>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome for icons -->
</head>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <!-- Hidden field to retain ExpenseId -->
                        <input type="hidden" asp-for="ExpenseId" />
                        <div class="mb-4">
                            <label for="Category" class="form-label"><i class="fas fa-tags me-2"></i>Category</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tags"></i></span>
                                <input asp-for="Category" class="form-control form-control-lg" id="Category" placeholder="Enter category" />
                            </div>
                        </div>

                        <!-- Amount Input -->
                        <div class="mb-4">
                            <label for="Amount" class="form-label"><i class="fas fa-money-bill me-2"></i>Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">₹</span>
                                <input asp-for="Amount" type="number" min="0" class="form-control form-control-lg" id="Amount" placeholder="Enter amount" />
                            </div>
                        </div>

                        <!-- Description Input -->
                        <div class="mb-4">
                            <label for="Description" class="form-label"><i class="fas fa-pencil-alt me-2"></i>Description</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-pencil-alt"></i></span>
                                <textarea asp-for="Description" class="form-control form-control-lg" id="Description" rows="3" placeholder="Describe the expense..."></textarea>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success btn-lg btn-hover-effect">
                                <i class="fas fa-save"></i> Save
                            </button>
                            <a href="@Url.Action("Index", "Expense")" class="btn btn-secondary btn-lg btn-hover-effect">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced CSS Styling -->
<style>
    .form-control-lg {
        font-size: 1.2rem;
        border-radius: 8px;
        padding: 12px;
    }

    .input-group {
        margin-bottom: 1.5rem;
    }

    .input-group-text {
        font-size: 1.5rem;
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-radius: 8px 0 0 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-hover-effect {
        border-radius: 50px;
        padding: 12px 30px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-hover-effect:hover {
            transform: scale(1.05);
            background-color: #5a6268;
        }

    /* Button Icons */
    .fas {
        margin-right: 8px;
    }

    /* Input Field Focus Effect */
    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        border-color: #007bff;
    }

    /* Header Styling */
    h2 {
        font-weight: bold;
        color: #007bff;
    }

    /* Enhanced Form Inputs */
    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .card {
        border-radius: 12px;
        padding: 20px;
        background-color: #ffffff;
    }
</style>
