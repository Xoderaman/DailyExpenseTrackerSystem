@model IEnumerable<DailyExpenseTracker.Entity.Request.TransactionModel>

@{
    Layout = null;  // Optional, change it as per your layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Global Styles */
        body {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            font-family: 'Arial', sans-serif;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 600;
            color: #343a40;
            margin-bottom: 30px;
            text-align: center;
        }

        /* Table Styles */
        .table {
            background-color: #ffffff;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 40px;
            transition: box-shadow 0.3s ease;
        }

        .table th, .table td {
            vertical-align: middle;
            font-size: 1rem;
            padding: 15px;
            text-align: center;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f2f2f2;
        }

        .table th {
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid #0069d9;
        }

        /* Hover effect for table rows */
        .table tr:hover {
            background-color: #e9ecef;
            transform: scale(1.02);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Status Colors */
        .status-Completed {
            color: #28a745;
            font-weight: bold;
        }

        .status-Failed {
            color: #dc3545;
            font-weight: bold;
        }

        .status-Pending {
            color: #ffc107;
            font-weight: bold;
        }

        /* Form Styles */
        .form-group label {
            font-weight: 500;
        }

        .form-control {
            border-radius: 0.5rem;
            border-color: #ced4da;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 0.7rem 1.5rem;
            border-radius: 0.3rem;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .no-transactions {
            color: #6c757d;
            font-size: 1.2rem;
            text-align: center;
        }

        /* Add New Transaction Form Styling */
        .form-container {
            background-color: #ffffff;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-top: 40px;
        }

        .form-container h3 {
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #007bff;
        }

        .form-group {
            margin-bottom: 20px;
        }

        /* Responsive Styles */
        @@media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .table th, .table td {
                font-size: 0.85rem;
                padding: 12px;
            }

            .form-container {
                padding: 15px;
            }

            .btn-primary {
                width: 100%;
            }
        }

    </style>
</head>
<body>

    <div class="container mt-5">
        <h1>Transaction History</h1>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Transaction ID</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>@transaction.TransactionId</td>
                            <td>@transaction.Date.ToShortDateString()</td>
                            <td>@transaction.Amount</td>
                            <td class="status-@transaction.Status.Replace(" ", "")">
                                @transaction.Status
                            </td>
                            <td>@transaction.Category</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
       

        <!-- Form to add a new transaction -->
        <div class="form-container">
            <h3>Add New Transaction</h3>
            <form asp-controller="Transaction" asp-action="AddTransaction" method="post">
                <div class="form-group">
                    <label for="TransactionId">Transaction ID</label>
                    <input type="number" class="form-control" id="TransactionId" name="TransactionId" required />
                </div>
                <div class="form-group">
                    <label for="Date">Date</label>
                    <input type="date" class="form-control" id="Date" name="Date" required />
                </div>
                <div class="form-group">
                    <label for="Amount">Amount</label>
                    <input type="number" class="form-control" id="Amount" name="Amount" required />
                </div>
                <div class="form-group">
                    <label for="Status">Status</label>
                    <input type="text" class="form-control" id="Status" name="Status" required />
                </div>
                <div class="form-group">
                    <label for="Category">Category</label>
                    <input type="text" class="form-control" id="Category" name="Category" placeholder="e.g., Shopping, Electronics" required />
                </div>
                <button type="submit" class="btn btn-primary">Add Transaction</button>
              
                <button type="button" class="btn btn-primary" onclick="window.location.href='/Home/TransactionHistory'">View Transaction History</button>

            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
