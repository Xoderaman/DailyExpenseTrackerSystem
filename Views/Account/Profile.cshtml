@model DailyExpenseTracker.Entity.Request.UserModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #333;
        }

        .profile-card {
            background: linear-gradient(135deg, #6c7bff, #ff6cc7);
            border-radius: 20px;
            padding: 30px;
            width: 400px;
            text-align: center;
            color: white;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .profile-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
            }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 30px;
            font-weight: 700;
        }

        .user-detail {
            font-size: 1.1rem;
            margin-bottom: 15px;
            color: #f8f9fa;
        }

            .user-detail span {
                font-weight: bold;
                color: #ffeb3b;
            }

        .btn-action {
            display: block;
            width: 100%;
            padding: 12px;
            border-radius: 25px;
            color: #fff;
            font-size: 1.1rem;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
            margin-top: 15px;
            text-align: center;
        }

        .btn-update {
            background-color: #4CAF50;
        }

            .btn-update:hover {
                background-color: #45a049;
                transform: scale(1.05);
            }

        .btn-logout {
            background-color: #ff4d4d;
        }

            .btn-logout:hover {
                background-color: #e60000;
                transform: scale(1.05);
            }

    </style>
</head>
<body>
    <div class="profile-card">
        <h1>User Profile</h1>
      
        <div class="user-detail">
            Username: <span>@Model.UserName</span>
        </div>
        <div class="user-detail">
            Email: <span>@Model.Email</span>
        </div>
        <div class="user-detail">
            Mobile: <span>@Model.MobileNumber</span>
        </div>
        <div class="user-detail">
            Password: <span>@Model.Password</span>
        </div>

 

        <!-- Logout Button -->
        <a href="@Url.Action("UpdateProfile", "Account")" class="btn-action btn-update">Update Profile</a>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
