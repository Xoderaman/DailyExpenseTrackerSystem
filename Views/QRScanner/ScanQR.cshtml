@{
    ViewData["Title"] = "Scan QR Code";
}

<style>
    /* General body and page styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
        text-align: center; /* Center align everything */
    }

    .container {
        margin-top: 100px; /* Ensure content is pushed below the navbar */
        padding: 20px;
    }

    h2 {
        color: #333;
        font-size: 28px;
        margin-bottom: 20px;
    }

    .description {
        max-width: 600px;
        margin: 0 auto 20px;
        font-size: 18px;
        color: #555;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    #reader {
        width: 100%;
        max-width: 500px;
        margin: auto;
        position: relative;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
    }

    video {
        width: 100%;
        border-radius: 5px;
    }

    #scan-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 255, 0, 0.3);
        display: none;
    }

    .btn {
        margin-top: 20px;
        padding: 15px 30px;
        font-size: 18px;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #28a745;
        background-image: url('start-scan-icon.png'); /* Replace with a real icon URL */
        background-repeat: no-repeat;
        background-position: left center;
        padding-left: 50px; /* Adjust padding for the icon */
    }

    .btn-danger {
        background-color: #dc3545;
        background-image: url('stop-scan-icon.png'); /* Replace with a real icon URL */
        background-repeat: no-repeat;
        background-position: left center;
        padding-left: 50px;
    }

    .btn:hover {
        opacity: 0.8;
    }

    /* Center buttons and ensure spacing */
    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .features-list {
        list-style-type: none; /* Remove default bullet points */
        padding: 0;
        margin: 20px auto;
        max-width: 600px;
        text-align: left;
    }

    .feature-item {
        display: flex;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #ddd; /* Add a border between items */
    }

    .feature-icon {
        font-size: 24px; /* Icon size */
        margin-right: 10px; /* Space between icon and text */
    }

    .feature-item:last-child {
        border-bottom: none; /* Remove border for the last item */
    }

</style>

